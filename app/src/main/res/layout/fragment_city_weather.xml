<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sun_bg">

    <!-- TODO: Update blank fragment layout -->
    <!-- 上一部分图标显示 温度风向等 -->
    <LinearLayout
        android:id="@+id/frag_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/frag_tv_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6℃"
                android:textSize="40sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/frag_tv_city"
                style="@style/todaytext"
                android:text="成都"
                android:layout_below="@id/frag_tv_current"/>
            <TextView
                android:id="@+id/frag_tv_condition"
                style="@style/todaytext"
                android:text="晴"
                android:layout_below="@id/frag_tv_city"/>
            <TextView
                android:id="@+id/frag_tv_date"
                style="@style/windtext"
                android:text="2020-12-03"
                android:layout_marginTop="25dp"
                android:layout_below="@id/frag_tv_condition"/>
            <TextView
                android:id="@+id/frag_tv_wind"
                style="@style/windtext"
                android:text="东北风3~4级"
                android:layout_below="@id/frag_tv_date"/>
            <TextView
                android:id="@+id/frag_tv_line1"
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/frag_tv_wind"
                android:background="#696969"
                android:layout_alignBottom="@id/frag_tv_wind"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/frag_tv_tmprange"
                style="@style/windtext"
                android:text="7℃/4℃"
                android:layout_toRightOf="@id/frag_tv_line1"
                android:layout_alignBottom="@id/frag_tv_wind"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/frag_tv_today"
                android:layout_alignParentRight="true"
                android:src="@mipmap/sunny"/>
        </RelativeLayout>

        <!--用于显示未来三天的天气情况 -->
        <LinearLayout
            android:id="@+id/frag_center_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:background="@drawable/frag_bg"/>

        <!--用于显示未来三天的天气情况 -->
        <LinearLayout
            android:id="@+id/frag_index_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/frag_bg"
            android:layout_margin="10dp"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/frag_index_tv_dress"
                    style="@style/indextext"
                    android:text="穿衣指数"
                    android:drawableBottom="@mipmap/wear"/>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#696969"/>
                <TextView
                    android:id="@+id/frag_index_tv_car"
                    style="@style/indextext"
                    android:text="开车指数"
                    android:drawableBottom="@mipmap/car"/>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#696969"/>
                <TextView
                    android:id="@+id/frag_index_tv_cold"
                    style="@style/indextext"
                    android:text="感冒指数"
                    android:drawableBottom="@mipmap/cold"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#696969"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/frag_index_tv_sport"
                    style="@style/indextext"
                    android:text="运动指数"
                    android:drawableBottom="@mipmap/sport"/>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#696969"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/frag_index_tv_uv"
                    style="@style/indextext"
                    android:text="紫外线指数"
                    android:drawableBottom="@mipmap/uv"/>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#696969"
                    android:layout_marginTop="10dp"/>
                <TextView
                    style="@style/indextext" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>